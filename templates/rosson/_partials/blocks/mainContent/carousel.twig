{% set carouselWidth = craft.config.get('carouselWidth', 'tungsten') %}
{% set carouselHeight = craft.config.get('carouselHeight', 'tungsten') %}

{% set carouselImage = {
    mode: 'crop',
    width: carouselWidth,
    height: carouselHeight,
    quality: 100,
    position: 'center-center'
} %}

{% if block.bcGalleryImages %}
  {% set slides = block.bcGalleryImages %}
  <!-- Slider main container -->
  <div class="gallery-swiper swiper-container" style="height:{{ carouselHeight }}px; width:{{ carouselWidth }}px;">
    <!-- Additional required wrapper -->
    <div class="swiper-wrapper">
        <!-- Slides -->
        {% for slide in slides %}
          <div class="swiper-slide">
            <a href="{{ slide.bcImageLink }}"><img src="{{ slide.url(carouselImage) }}" alt="{{ slide.bcImageCaption }}" /></a>
            {% if slide.bcImageCaption | length %}
              <div class="swiper-caption">{{ slide.bcImageCaption }}</div>
            {% endif %}
          </div>
        {% endfor %}
    </div>

    <!-- If we need navigation buttons -->
    <div class="swiper-button-prev"><i class="fa fa-chevron-left"></i></div>
    <div class="swiper-button-next"><i class="fa fa-chevron-right"></i></div>
   </div>
{% endif %}

{% js %}
  $(document).ready(function () {
    //initialize swiper when document ready
    var mySwiper = new Swiper ('.swiper-container', {
      speed: 500,
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
      loop: true,
    })
  });
{% endjs %}
